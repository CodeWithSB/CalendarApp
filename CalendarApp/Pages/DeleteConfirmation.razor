<div class="p-4">
    <p class="text-5xl text-center text-red-500">
        <i class="far fa-times-circle"></i>
    </p>
    <p class="my-2 text-2xl text-center">
        Are you sure to delete this event?
    </p>
    <div class="flex justify-center items-center">
        <button @onclick="CloseAction" class="rounded-full my-3 mx-5 px-4 py-2 bg-gray-500 text-white">
            Cancel
        </button>
        <button @onclick="() => DeleteAction(EventPassed.EventID)" class="rounded-full my-3 mx-5 px-4 py-2 bg-red-500 text-white">
            Submit
        </button>
    </div>
</div>

@code{
    [Parameter]
    public Action<Guid> DeleteAction { get; set; }

    [Parameter]
    public Action CloseAction { get; set; }

    [Parameter]
    public CalendarEvent EventPassed { get; set; }

    void DeleteEvent(){
    }
}